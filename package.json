{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "migrate": "prisma migrate dev",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "check": "eslint . && prettier --check .",
    "test": "echo 'No tests configured yet'",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.3",
    "@prisma/client": "6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "dotenv": "^17.2.2",
    "hono": "^4.9.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  }
}
